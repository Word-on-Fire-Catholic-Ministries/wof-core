{
  "name": "woforg-plugin",
  "version": "1.0.0",
  "description": "Backend for wordonfire.org.",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently \"npm run watch:css-js\" \"npm run sync:css\" \"npm run watch:php\"",
    "watch:css-js": "nodemon --ignore dist/ -e scss,js -x \"npm run build:dev\"",
    "sync:css": "browser-sync start --proxy localhost:$npm_config_port --port 7777 --files 'dist/*/**'",
    "watch:php": "nodemon -e php -x \"browser-sync reload --port 7777\"",
    "build:production": "npm run build:css && npm run build:js-prod",
    "build:dev": "concurrently \"npm run build:css\" \"npm run build:js-dev\"",
    "build:css": "npm run build:scss && npm run build:postcss",
    "build:scss": "node-sass --output-style compressed -o dist/css assets/css",
    "build:postcss": "postcss dist/css --use autoprefixer --replace",
    "build:js-prod": "webpack --mode production --config webpack.config.js",
    "build:js-dev": "webpack --mode development --config webpack.config.js",
    "lint": "eslint",
    "test:js": "jest",
    "test:js-coverage": "jest --coverage",
    "test:php": "./vendor/bin/phpunit --testdox ./test/php-tests",
    "test:php-coverage": "./vendor/bin/phpunit --coverage-html ./test/php-coverage --testdox ./test/php-tests",
    "test": "npm run test:js && npm run test:php"
  },
  "author": "Sean Davis",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.19",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
