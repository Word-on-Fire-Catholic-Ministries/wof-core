{
  "name": "wof-core",
  "version": "1.0.0",
  "description": "Shared code accross all WOF sites.",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently \"npm run watch:css-js\" \"npm run sync:css\" \"npm run watch:php\"",
    "watch:css-js": "nodemon --ignore blocks/ -e scss,js -x \"npm run build\"",
    "sync:css": "browser-sync start --proxy localhost:$npm_config_port --port 7777 --files 'blocks/*/**'",
    "watch:php": "nodemon -e php -x \"browser-sync reload --port 7777\"",
    "build": "concurrently \"npm run build:css\" \"npm run build:js\"",
    "build:css": "npm run build:scss && npm run build:postcss",
    "build:scss": "node-sass --output-style compressed blocks/",
    "build:postcss": "postcss blocks/ --use autoprefixer --replace",
    "build:js": "webpack --mode production --config webpack.config.js"
  },
  "author": "Sean Davis",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
